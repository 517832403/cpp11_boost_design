import os ;
import path ;
TARGET_NAME = test_property ;
CWD = . ;
path-constant BOOST_ROOT : [ os.environ BOOST_ROOT ] ;

project
	: requirements
		<cxxflags>-std=c++11
		<include>$(CWD)/
	;

alias dependencies
	: /boost/system//boost_system
	;

use-project /boost : $(BOOST_ROOT) ;



exe $(TARGET_NAME)
	: [ glob-tree *.cpp ]
		dependencies
	: <implicit-dependency>/boost//headers
	:
	: 
	;
